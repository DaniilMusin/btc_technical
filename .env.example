# Настройки биржи
EXCHANGE=BINGX
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_INTERVAL=15m

# API ключи BingX
BINGX_API_KEY=your_api_key_here
BINGX_API_SECRET=your_api_secret_here

# Режим тестирования
USE_TESTNET=true
BINGX_TESTNET=true

# Параметры торговли
INITIAL_BALANCE=1000
BINGX_MARGIN_MODE=isolated
BINGX_LEVERAGE=3

# Параметры стратегии
WARMUP_CANDLES=300
TRAIL_TRIGGER_LONG=0.04
TRAIL_TRIGGER_SHORT=0.04
TRAIL_SL_LONG=0.02
TRAIL_SL_SHORT=0.02

# Telegram настройки (опционально)
TG_BOT_TOKEN=your_telegram_bot_token
TG_CHAT_ID=your_chat_id

# База данных
DB_PATH=trades.db

# Архивирование данных
ARCHIVE_CSV=false

# Логирование
LOG_FILE=bingx_bot.log
